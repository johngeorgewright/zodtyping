{
  "name": "zodtyping",
  "version": "1.0.0",
  "description": "Generate zod types from static types & JSON schema.",
  "main": "dist/index.js",
  "bin": "dist/cli.js",
  "scripts": {
    "build": "yarn clean && tsc --project tsconfig.json",
    "clean": "rimraf dist",
    "schema": "typescript-json-schema --out zodtyping.schema.json src/zod.ts Instructions && prettier --write zodtyping.schema.json",
    "start": "concurrently --names build,test 'yarn start:build' 'yarn start:test'",
    "start:build": "tsc --watch --preserveWatchOutput",
    "start:test": "jest --watch",
    "test": "jest",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johngeorgewright/zodtyping.git"
  },
  "keywords": [],
  "author": "John Wright <johngeorge.wright@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johngeorgewright/zodtyping/issues"
  },
  "homepage": "https://github.com/johngeorgewright/zodtyping#readme",
  "devDependencies": {
    "@commitlint/cli": "16.3.0",
    "@commitlint/config-conventional": "16.2.4",
    "@jest/types": "28.1.0",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.4",
    "@semantic-release/npm": "9.0.1",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/jest": "27.5.2",
    "@types/js-yaml": "4.0.5",
    "@types/node": "16.11.38",
    "@types/source-map-support": "0.5.4",
    "@types/yargs": "17.0.10",
    "commitizen": "4.2.4",
    "concurrently": "7.2.1",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.1",
    "jest": "28.1.0",
    "lint-staged": "12.5.0",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "semantic-release": "19.0.2",
    "source-map-support": "0.5.21",
    "ts-jest": "28.0.4",
    "ts-node": "10.8.1",
    "typescript": "4.6.4",
    "typescript-json-schema": "0.53.1",
    "zod": "3.17.3"
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "yarn prettier --write"
    ],
    "src/zod.ts": [
      "yarn schema"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@johngw/array": "3.3.0",
    "@johngw/error": "2.2.0",
    "@johngw/iterator": "1.2.0",
    "js-yaml": "4.1.0",
    "json-schema-to-typescript": "10.1.5",
    "ts-morph": "15.1.0",
    "tslib": "2.4.0",
    "yargs": "17.5.1"
  },
  "peerDependencies": {
    "zod": "^3.0.0"
  },
  "packageManager": "yarn@3.2.1"
}
